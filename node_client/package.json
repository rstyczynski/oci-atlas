{
  "name": "global-directory-node-client",
  "version": "1.0.0",
  "description": "Node.js/TypeScript client for the OCI global directory (regions, proxy lookup)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "example:regions": "ts-node examples/regions.ts",
    "example:region": "ts-node examples/region.ts",
    "example:realms": "ts-node examples/realms.ts",
    "example:realm": "ts-node examples/realm.ts",
    "prepare": "npm run build",
    "example:tenancy": "ts-node examples/tenancy.ts"
  },
  "dependencies": {
    "oci-common": "^2.125.1",
    "oci-objectstorage": "^2.125.1"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/test/*.test.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.json"
        }
      ]
    }
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@types/node-fetch": "^2.6.4",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.0"
  }
}