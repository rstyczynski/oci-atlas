{
  "$id": "realms/v1",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "additionalProperties": {
    "additionalProperties": false,
    "properties": {
      "api_domain": {
        "description": "Second-level domain for OCI API endpoints in this realm, e.g. oraclecloud.com",
        "type": "string"
      },
      "description": {
        "description": "Longer description of the realm",
        "type": "string"
      },
      "geo-region": {
        "description": "Geographic scope, e.g. global, eu",
        "type": "string"
      },
      "name": {
        "description": "Human-readable realm name, e.g. OCI Public",
        "type": "string"
      },
      "type": {
        "description": "Deployment model of the realm",
        "enum": [
          "public",
          "government",
          "sovereign",
          "drcc",
          "alloy",
          "airgapped"
        ],
        "type": "string"
      }
    },
    "required": [
      "type",
      "geo-region",
      "name",
      "description",
      "api_domain"
    ],
    "type": "object"
  },
  "description": "Realm-level attributes \u2014 type, name, geo-region, API domain",
  "properties": {
    "last_updated_timestamp": {
      "description": "ISO 8601 UTC timestamp injected by tf_manager at upload time",
      "type": "string"
    },
    "schema_version": {
      "description": "Semver version of this data object, format MAJOR.MINOR.PATCH (e.g. \"1.0.0\")",
      "type": "string"
    }
  },
  "required": [
    "schema_version"
  ],
  "title": "realms/v1",
  "type": "object"
}