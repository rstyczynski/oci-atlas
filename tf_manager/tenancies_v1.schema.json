{
  "$defs": {
    "cidr_entry": {
      "additionalProperties": false,
      "properties": {
        "cidr": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "tags": {
          "items": {
            "type": "string"
          },
          "type": "array"
        }
      },
      "required": [
        "cidr",
        "description",
        "tags"
      ],
      "type": "object"
    }
  },
  "$id": "tenancies/v1",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "additionalProperties": {
    "additionalProperties": false,
    "properties": {
      "realm": {
        "description": "Realm this tenancy belongs to, e.g. oc1",
        "type": "string"
      },
      "regions": {
        "$comment": "Region keys reference regions/v2 map keys. Cross-document referential integrity is validated by tooling outside JSON Schema.",
        "additionalProperties": {
          "additionalProperties": false,
          "properties": {
            "network": {
              "additionalProperties": false,
              "properties": {
                "private": {
                  "description": "Private/internal CIDR blocks for this tenancy in this region",
                  "items": {
                    "$ref": "#/$defs/cidr_entry"
                  },
                  "type": "array"
                },
                "proxy": {
                  "additionalProperties": false,
                  "properties": {
                    "ip": {
                      "type": "string"
                    },
                    "noproxy": {
                      "items": {
                        "type": "string"
                      },
                      "type": "array"
                    },
                    "port": {
                      "type": "string"
                    },
                    "url": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "url",
                    "ip",
                    "port",
                    "noproxy"
                  ],
                  "type": "object"
                }
              },
              "required": [
                "private",
                "proxy"
              ],
              "type": "object"
            },
            "observability": {
              "additionalProperties": false,
              "properties": {
                "loki_destination_cidr": {
                  "type": "string"
                },
                "loki_fqdn": {
                  "type": "string"
                },
                "prometheus_scraping_cidr": {
                  "type": "string"
                }
              },
              "required": [
                "prometheus_scraping_cidr",
                "loki_destination_cidr",
                "loki_fqdn"
              ],
              "type": "object"
            },
            "security": {
              "additionalProperties": false,
              "properties": {
                "vault": {
                  "additionalProperties": false,
                  "properties": {
                    "crypto_endpoint": {
                      "type": "string"
                    },
                    "management_endpoint": {
                      "type": "string"
                    },
                    "ocid": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "ocid",
                    "crypto_endpoint",
                    "management_endpoint"
                  ],
                  "type": "object"
                }
              },
              "required": [
                "vault"
              ],
              "type": "object"
            },
            "toolchain": {
              "additionalProperties": false,
              "properties": {
                "github": {
                  "additionalProperties": false,
                  "properties": {
                    "runner": {
                      "additionalProperties": false,
                      "properties": {
                        "image": {
                          "type": "string"
                        },
                        "labels": {
                          "items": {
                            "type": "string"
                          },
                          "minItems": 1,
                          "type": "array"
                        }
                      },
                      "required": [
                        "labels",
                        "image"
                      ],
                      "type": "object"
                    }
                  },
                  "required": [
                    "runner"
                  ],
                  "type": "object"
                }
              },
              "required": [
                "github"
              ],
              "type": "object"
            }
          },
          "required": [
            "network",
            "security",
            "toolchain",
            "observability"
          ],
          "type": "object"
        },
        "description": "Per-region subscription attributes, keyed by OCI region identifier (e.g. eu-zurich-1)",
        "propertyNames": {
          "description": "OCI region identifier format, e.g. eu-zurich-1",
          "pattern": "^[a-z]+-[a-z]+-[0-9]+$"
        },
        "type": "object"
      }
    },
    "required": [
      "realm",
      "regions"
    ],
    "type": "object"
  },
  "description": "OCI tenancy attributes \u2014 realm membership and per-region subscription attributes (network, security, toolchain, observability). Region keys in the regions sub-map must correspond to keys in regions/v2 (enforced by data governance, not schema).",
  "properties": {
    "last_updated_timestamp": {
      "description": "ISO 8601 UTC timestamp injected by tf_manager at upload time",
      "type": "string"
    },
    "schema_version": {
      "description": "Semver version of this data object, format MAJOR.MINOR.PATCH (e.g. \"1.0.0\")",
      "type": "string"
    }
  },
  "required": [
    "schema_version"
  ],
  "title": "tenancies/v1",
  "type": "object"
}